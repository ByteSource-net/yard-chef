<% resources = get_items_of_type(object, :resource) %>
<% cookbook_attrib = get_items_of_type(object, :attribute) %>
<% if resources.size > 0 or cookbook_attrib.size > 0 %>
  <div class="method_details_list">
    <h2> Resource Details</h2>
    <% if cookbook_attrib.size > 0 %>
      <h3>Cookbook Level Attributes</h3>
      <% cookbook_attrib.each_with_index do |attrib, i| %>
        <%= yieldall :object => attrib, :owner => object, :index => i %>
      <% end %>
    <% end %>
    <% if resources.size > 0 %>
      <% resources.each do |resource| %>
        <h3>Resource Name : <%= resource.name.to_s.split('~')[0] %></h3>
        <% resource.children.each_with_index do |attrib, i| %>
          <%= yieldall :object => attrib, :owner => resource, :index => i %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
