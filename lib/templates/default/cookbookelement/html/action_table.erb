<% providers = get_items_of_type(@cookbook, :provider) %>
<% if !providers.empty? %>
  <div class = "multiline">
    <h3>Actions</h3>
    <% providers.each do |provider| %>
      <h4>Provider Name : <%= provider.name.to_s.split('~')[0] %></h4>
      <table style="width:580px;" border="1">
        <thead>
          <tr>
            <th class="even">Action</th>
            <th class="odd">Description</th>
          </tr>
        </thead>
        <tbody>
          <% provider.children.each do |action| %>
            <tr class="">
              <td><a href="<%= @cookbook.name.to_s %>.html#<%= action.name.to_s %>-instance_<%= action.type %>"><%= action.name.to_s %></a></td>
              <td><%= action.docstring.to_s %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
<% end %>
